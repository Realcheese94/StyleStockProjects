<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <ImageButton
            android:id="@+id/bottomImage"
            android:layout_width="86dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="126dp"
            android:layout_marginTop="67dp"
            tools:ignore="UnknownId"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="50dp" />

        <ImageButton
            android:id="@+id/otherImage"
            android:layout_width="73dp"
            android:layout_height="111dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/bottomImage"
            android:layout_gravity="center" />


        <ImageButton
            android:id="@+id/shoeImage"
            android:layout_width="91dp"
            android:layout_height="77dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/bottomImage"
            android:layout_gravity="center"
            android:layout_marginEnd="46dp" />

        <ImageButton
            android:id="@+id/accImage"
            android:layout_width="91dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bottomImage"
            android:layout_gravity="center"
            android:layout_marginStart="17dp" />

    </RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
        <Spinner
            android:id="@+id/diary_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </Spinner>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/diary_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"></android.support.v7.widget.RecyclerView>

     </LinearLayout>

</LinearLayout>