<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/hat_view"
            android:layout_width="90dp"
            android:layout_height="91dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/hat"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="160dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/top_view"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:background="@drawable/top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp" />


        <ImageView
            android:id="@+id/bottom_view"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:background="@drawable/bottom"
            android:layout_alignLeft="@+id/top_view"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/top_view"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:id="@+id/acc_view"
            android:layout_width="86dp"
            android:layout_height="115dp"
            android:background="@drawable/acc"
            android:layout_marginTop="178dp"
            android:layout_marginLeft="270dp"/>

        <ImageView
            android:id="@+id/shoes_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/shoe"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="160dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <Spinner
            android:id="@+id/diary_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </Spinner>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/diary_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</LinearLayout>