<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >

            <ImageView
                android:id="@+id/top_view"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_margin="5dp"
                android:background="@drawable/top" />


            <ImageView
                android:id="@+id/bottom_view"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/top_view"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/top_view"
                android:layout_margin="5dp"

                android:background="@drawable/bottom"
                />

        <ImageView
            android:id="@+id/hat_view"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="126dp"
            android:layout_marginTop="51dp"
            android:scaleType="fitXY"
            android:src="@drawable/hat"
            android:layout_alignParentRight="true"
            android:layout_marginRight="126dp" />

        <ImageView
            android:id="@+id/shoes_view"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/acc_view"
            android:layout_marginEnd="117dp"
            android:background="@drawable/shoe"
            android:layout_alignParentRight="true"
            android:layout_marginRight="117dp" />


        <ImageView
            android:id="@+id/acc_view"
            android:layout_width="115dp"
            android:layout_height="115dp"

            android:layout_centerVertical="true"
            android:layout_marginStart="-126dp"
            android:layout_toEndOf="@+id/hat_view"
            android:background="@drawable/acc"
            android:layout_marginLeft="-126dp"
            android:layout_toRightOf="@+id/hat_view" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/diary_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"></Spinner>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/diary_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>
